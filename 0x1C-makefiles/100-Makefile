CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all

.PHONY: all clean oclean fclean re

main.o: main.c m.h
	$(CC)$(CFLAGS) -c main.c -o main.o

schoool: school.c m.h
	$(CC)$(CFLAGS) -c school.c -o school.o
